{
  "crawl_id": "all_recipes",
  "url_instr": {
    "http://allrecipes.com/": {
      "url_filters": ["Recipe"],
      "filter_instr": {
        "/Recipe/": [
          {
            "label":"title",
            "selector":"h1#itemTitle"
          },
          {
            "label":"ingredients",
            "selector":"span.ingredient-name"
          },
          {
            "label":"description",
            "selector":"span#lblDescription"
          },
          {
            "label":"rating",
            "selector":"div.rating-stars meta",
            "property":"content"
          },
          {
            "label":"photo",
            "selector":"img#imgPhoto",
            "property":"src"
          }
        ]
      }
    }
  }
}

